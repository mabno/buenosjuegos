extends layout/main
block head
	title= pageHead.title

	meta(name="description" content=pageHead.description)
	//- OPEN GRAPH
	meta(property="og:title" content=pageHead.title)
	meta(property="og:description" content=pageHead.description)
	meta(property="og:site_name" content="Buenos Juegos")
	meta(property="og:type" content="website")
	meta(property="og:url" content="http://buenosjuegos.site/"+filterCategory)
	meta(property="og:image" content="/static/img/banner.png")

block content
	h1.content-title
		i.fas.fa-dice-d6.fa-pull-left
